<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
    android:orientation="vertical"
    android:isScrollContainer="true"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALL"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp">

                -- riga 1 --

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/rosso_tiziano"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cosa è?"
                        android:textColor="#ffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="La palla medica è un attrezzo molto utilizzato nelle palestre, negli studi di fitness e di fisioterapia e anche nei workout in casa.
 E' realizzato in vinile o in pelle e riempito di sabbia. Si tratta di uno strumento utilizzato anche in fisioterapia e per la riabilitazione.
 Serve a potenziare la muscolatura, a migliorare resistenza, forza e velocità. E' una palla rigida, molto versatile, disponibile con vari pesi."
                        android:textColor="@color/black"
                        android:textSize="13dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            -- riga 2 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="201dp"
                        android:background="@color/rosso_tiziano"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Benefici"
                            android:textColor="#ffff"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="338dp"
                            android:layout_height="158dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="3dp"
                            android:text="Il vantaggio della palla medica rispetto a un peso di forma classica, è che la palla medica permette di allenare anche l'equilibrio. La forma sferica facilita l'esecuzione degli esercizi. I vantaggi, quindi, sono sia di risultati che di allenamento: la palla medica permette di effettuare esercizi con un carico di peso molto elevato ma senza dover caricare e scaricare bilanceri. Inoltre, la palla medica, è indicata per tutti gli esercizi isometrici. "

                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            -- riga 3 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:background="@color/rosso_tiziano"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Consigli utili"
                            android:textColor="#ffff"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="344dp"
                            android:layout_height="130dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="16dp"
                            android:text="Iniziando un allenamento con una palla medica da 1 chilo, peso minimo, e aumentando di volta in volta, si definiranno tutta una serie di muscoli. Importante è l'effetto delle palle mediche sulle spalle, sulla schiena, sulle braccia e sul petto. Una corretta esecuzione con il peso adeguato è molto importante.   "
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            -- riga 4 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Esempi di possibili esercizi"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="209dp"
                        android:background="@color/white"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="  1. Bear hug squat"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:text="Afferra la palla con tutte e due le mani all’altezza dello petto ed esegui lo squat."
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/im7"
                            android:layout_width="153dp"
                            android:layout_height="120dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/palla" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            -- riga 5 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:orientation="vertical"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="203dp"
                        android:background="@color/white"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="  2. Crush-grip push up"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="320dp"
                            android:layout_height="74dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="0dp"

                            android:text="Esegui un piegamento sulle braccia (push up) mantenendo i gomiti stretti. Immagina di fare un diamond push up sulla medball."
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/im8"
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="-20dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/pallap2" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            -- riga 6 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:orientation="vertical"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="  3. Russian twist"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="314dp"
                            android:layout_height="300dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"

                            android:text="\n \n Non devi far altro che eseguire un russian twist e afferrare la medball con entrambe la mani ed eseguirlo inizialmente poggiando entrambi i piedi a terra.

La versione più difficile è con entrambi i piedi staccati da terra."
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/im9"
                            android:layout_width="141dp"
                            android:layout_height="120dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/palla12" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            -- riga 7 --

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="  4. Lying chest pass"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="314dp"
                            android:layout_height="310dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="46dp"

                            android:text="Sdraiati con le spalle sul pavimento e lancia la palla in alto in direzione del petto."
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/im10"
                            android:layout_width="172dp"
                            android:layout_height="98dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="-15dp"
                            android:src="@drawable/palla4" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



                -- riga 8 --

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="195dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="  5. Overhead lunge"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="314dp"
                                android:layout_height="300dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="46dp"

                                android:text="\n \n Affondo in avanti con la palla sopra la testa e braccia tese."
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/im11"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/palla5" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_marginTop="50dp"
                    android:text="Attenzione: prima di intraprendere qualsiasi attività fisica, si consiglia di effettuare una visita medico sportiva o consultare personale competente. "
                    android:textAlignment="center" />

            </LinearLayout>
        </LinearLayout>





    </ScrollView>

</LinearLayout>



